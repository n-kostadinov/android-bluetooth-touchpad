<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   >
<TextView
	android:layout_width="fill_parent"
	android:layout_height="40dip"
	android:text="Choose paired bluetooth device:"
	android:textSize="20dip"
	android:textColor="#C7C0C0"
	android:gravity="center"
	android:id="@+id/device_list_title"
	android:layout_alignParentTop="true"
/>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="1dip"
	android:background="#C7C0C0"
	android:layout_marginBottom="10dip"
	android:layout_below="@+id/device_list_title"
	android:id="@+id/device_list_line"
/>
<ScrollView
 	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/device_list_line">
<LinearLayout
 	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/device_list"
    android:layout_above="@+id/device_list_help"
    android:layout_below="@+id/device_list_label"
	/>
</ScrollView>
<Button	
	android:layout_width="fill_parent"
	android:layout_height="70dip"
	android:text="HELP"
	android:id="@+id/device_list_help"
	android:layout_above="@+id/device_list_refresh"
	android:textSize="25dip"
/>
<Button	
	android:layout_width="fill_parent"
	android:layout_height="70dip"
	android:text="REFRESH LIST"
	android:id="@+id/device_list_refresh"
	android:layout_alignParentBottom="true"
	android:textSize="25dip"
/>   

</RelativeLayout>   


