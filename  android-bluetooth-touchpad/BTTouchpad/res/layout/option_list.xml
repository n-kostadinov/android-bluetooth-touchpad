<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   >
   <TextView
	android:layout_width="fill_parent"
	android:layout_height="40dip"
	android:text="Choose paired bluetooth device:"
	android:textSize="20dip"
	android:textColor="#C7C0C0"
	android:gravity="center"
	android:id="@+id/option_list_title"
	android:layout_alignParentTop="true"
/>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="1dip"
	android:background="#C7C0C0"
	android:layout_marginBottom="10dip"
	android:layout_below="@+id/option_list_title"
	android:id="@+id/option_list_line"
/>
<ScrollView
 	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/device_list_line">
<LinearLayout
 	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/option_list"
    android:orientation="vertical"
	/>
 </ScrollView>  
</RelativeLayout>   


